.profile{
    background-color: #3fca84;
    height: 400rpx;
    text-align: center;
    position: relative;
}
.profile-img{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    left: 50%;
    transform: translate(-50%,60rpx);
}
.profile-name{
    font-size: 36rpx;
    color: white;
    position: absolute;
    left: 50%;
    transform: translate(-50%,270rpx);
}